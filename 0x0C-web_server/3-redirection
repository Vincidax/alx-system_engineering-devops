#!/usr/bin/env bash
# Bash script to configure Nginx on a fresh Ubuntu machine for redirection

# Install Nginx if not installed
if ! command -v nginx &> /dev/null; then
    sudo apt update
    sudo apt install nginx -y
fi

# Create or update Nginx configuration for redirection
sudo bash -c 'cat <<EOF > /etc/nginx/sites-available/redirect_me
server {
    listen 80;
    server_name _;

    location /redirect_me {
        return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;
    }
}
EOF'

# Create a symbolic link to enable the site
sudo ln -sf /etc/nginx/sites-available/redirect_me /etc/nginx/sites-enabled/

# Test Nginx configuration and reload instead of using systemctl
sudo nginx -t && sudo nginx -s reload
